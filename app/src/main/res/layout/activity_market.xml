<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="samples.exoguru.materialtabs.common.Activities.NewsPageActivity">

    <include
        android:id="@+id/MarketTitleBar"
        layout="@layout/tool_bar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/MarketImg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/MarketTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/ColorPrimary" />

            <TextView
                android:id="@+id/MarketType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/abc_secondary_text_material_light" />

            <TextView
                android:id="@+id/MarketAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/abc_secondary_text_material_light" />

            <TextView
                android:id="@+id/MarketDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/abc_secondary_text_material_light" />

            <TextView
                android:id="@+id/MarketContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/abc_primary_text_material_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相關店家"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/abc_primary_text_material_light" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/ColorPrimary" />

            <ListView
                android:id="@+id/ShopListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="always" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
