<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="samples.exoguru.materialtabs.common.Tabs.SearchTabFragments.SearchMarketFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="搜尋商圈"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/abc_secondary_text_material_light" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/dim_foreground_material_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"></Spinner>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:hint="請輸入關鍵字"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="標題"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:checked="true"/>
        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="內文"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:checked="false"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/ic_btn_search"
            android:drawableStart="@drawable/ic_btn_search"
            android:text="開始搜尋"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/abc_primary_text_material_light"/>
    </LinearLayout>

</LinearLayout>
